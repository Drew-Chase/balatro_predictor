{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Balatro Hand Predictor",
  "version": "0.1.0",
  "identifier": "com.balatro_predictor.app",
  "build": {
    "beforeDevCommand": "npm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Balatro Hand Predictor",
        "width": 800,
        "height": 600,
        "decorations": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
